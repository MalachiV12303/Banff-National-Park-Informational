---
const { topWord, bottomWord } = Astro.props;
---

<section>
	<h1 class="testFadeIn">{topWord}<span>{bottomWord}</span></h1>
</section>

<style>
	.testFadeIn {
		opacity: 0;
	}

	section {
		height: 100dvh;
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: darkslategray;
	}

	h1 {
		display: flex;
		flex-direction: column;
		font-family: "Inter-Light", Helvetica;
		font-weight: 400;
		color: #ffffff;
		font-size: 48px;
		text-align: center;
		letter-spacing: 12px;
		line-height: normal;
	}

	h1 span {
		font-weight: 900;
		letter-spacing: 5.76px;
		text-transform: uppercase;
	}

	@media screen and (max-width: 368px) {
	}
</style>
